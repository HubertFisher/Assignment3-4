<!DOCTYPE html>
<html lang="en">
<%- include('head') %>


<body class="container-fluid p-0">

    <div class="container d-flex justify-content-center align-items-center ">
      <div class="container bg-light">
        <form class="p-5 m-5" action="/registration" method="post" id="registrationForm">
          <!-- User input -->
          <div class="form-outline mb-4 d-flex justify-content-center align-items-center">
            <label class="form-label" for="username">Username</label>
            <input type="text" id="username" name="username" class="form-control" />
          </div>
  
          <!-- Password input -->
          <div class="form-outline mb-4 d-flex justify-content-center align-items-center ">
            <label class="form-label" for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" />
          </div>  
          <div class="form-outline mb-4 d-flex justify-content-center align-items-center ">
            <label class="form-label" for="password">Re-enter</label>
            <input type="password" id="password2" name="password2" class="form-control" />
          </div>  
          <!-- Submit button -->
          <div class="d-flex justify-content-center align-items-center ">
            <input type="submit" class="btn btn-primary btn-block mb-4 " value="Signup"/>
          </div>
  
          <div class="text-center">
            <p>Already have an account? <a href="/login">Login here!</a></p>
          </div>
        </form>
      </div>
    </div>
</body>  

<%- include('footer') %>
</html>