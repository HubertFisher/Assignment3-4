<!DOCTYPE html>
<html lang="en">
<%- include('head') %>

<body class="container-fluid p-0" > 
    <!--Navbar-->
    <%- include('navbar') %>
    <div class="container pt-3 p-5">
        <div class="row bg-dark p-5 rounded ">
            <div class="col-md-6">
                <img src="<%= tour.image %>" alt="<%= tour.description %>" class="img-fluid">
            </div>
            <div class="col-md-6 text-white"  id="tourData"  data-tour-id="<%= tour._id %>" data-tour-name="<%= tour.name %>" data-tour-price="<%= tour.price %>">
                <h1><%= tour.name %></h1>
                <h2><%= tour.description %></h2>
                <p><%= tour.location %></p>
                <p><%= tour.duration %> days</p>
                <p><%= tour.maxParticipants %> people</p>
                <p>Price: <%= tour.price %>$</p>
                <p>Start date: <%= tour.startDate %></p>
                <p>End date: <%= tour.endDate %></p>
                <button id= "addToCartBtn"class="button"> Add to cart</button>
            </div>
        </div>
    </div>
    
<!-- footer--------------------------------------------- -->
<%- include('footer') %>
<script src="/scripts/addToCart.js"></script>
</body>
</html>
